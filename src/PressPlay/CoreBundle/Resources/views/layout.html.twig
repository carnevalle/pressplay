
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Tidsregistrering - Press Play{% endblock %}</title>
        <meta name="description" content="">
        <meta name="author" content="">
        
        <!-- Mobile viewport optimized: j.mp/bplateviewport -->
        <meta name="viewport" content="width=device-width,initial-scale=1">

        {% block stylesheets %}
        {% stylesheets 
        'bundles/pressplaycore/bootstrap/css/bootstrap.min.css'
        'bundles/pressplaycore/bootstrap/css/bootstrap.min.responsive.css'
        '@PressPlayCoreBundle/Resources/public/css/pressplay.css'
        filter='cssrewrite'
        output='css/site.css'
        %}

        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />

        {% endstylesheets %}
        {% endblock %}        

        {% block javascripts %} 

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>

        {% javascripts
        '@PressPlayCoreBundle/Resources/public/bootstrap/js/bootstrap.min.js'
        '@PressPlayCoreBundle/Resources/public/js/underscore-min.js'
        output='css/site.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock %}
        
        {% block header %}{% endblock %}
    </head>

    <body>

        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                        <a class="brand" href="{{ path('_home') }}">Press Play <small>tid</small></a>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}    
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li><a href="{{ path('dashboard_home') }}">Dashboard</a></li>
                            <li><a href="{{ path('admin_home') }}">Admin</a></li>
                        </ul>
                        <ul class="nav pull-right">                            
                        

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{app.user.name}} <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('fos_user_profile_show') }}">Show profile</a></li>
                                    <li><a href="{{ path('dashboard_home') }}">Show dashboard</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li class="divider"></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                                </ul>
                            </li>
                        </ul>                            
                    </div><!--/.nav-collapse -->                     
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="container">

            {% block body %}{% endblock %}
            
            <hr>

            <footer>
                <p>Press Play Aps {{ "now"|date("Y") }}</p>
            </footer>

        </div> <!-- /container -->

    </body>
</html>
